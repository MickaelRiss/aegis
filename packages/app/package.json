{
  "name": "aegis-app",
  "version": "1.0.0",
  "description": "Desktop application for securing cryptocurrency seed phrases with AES-256-GCM encryption and Shamir secret sharing",
  "author": "mickaelriss",
  "private": true,
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "package": "electron-vite build && electron-builder --config",
    "package:mac": "electron-vite build && electron-builder --mac --config",
    "package:win": "electron-vite build && electron-builder --win --config",
    "package:linux": "electron-vite build && electron-builder --linux --config"
  },
  "build": {
    "appId": "com.aegis.app",
    "productName": "Aegis",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*"
    ],
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": ["nsis"]
    },
    "linux": {
      "target": ["AppImage"]
    }
  },
  "dependencies": {
    "@electron-toolkit/utils": "^3.0.0",
    "aegis-core": "workspace:*",
    "motion": "^12.29.2"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "electron": "^34.0.0",
    "electron-builder": "^26.4.0",
    "electron-vite": "^5.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.9.3"
  }
}
