{
  "name": "aegis",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.27.0",
  "pnpm": {
    "onlyBuiltDependencies": ["electron", "esbuild"]
  },
  "scripts": {
    "build": "pnpm -r build",
    "build:core": "pnpm --filter aegis-core build",
    "build:app": "pnpm --filter aegis-app build",
    "dev": "pnpm --filter aegis-app dev",
    "test": "pnpm --filter aegis-core test",
    "test:watch": "pnpm --filter aegis-core test:watch"
  }
}
